<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "notice" %>
<% end %>
<table width="100%" border="0" cellpadding="20" cellspacing="0">
	<tr>
		<td align="left" valign="top">
			<% if @user.admin %>
				<h3>New Marine Make</h3>

				<%= form_for(@marinemake) do |f| %>
					<%= f.error_messages %>

					<p>
						<%= f.label :make %><br />
						<%= f.text_field :make %>
					</p>
					<p>
						<%= f.submit 'Create' %>
					</p>
				<% end %>

				<%= link_to 'Back', marinemakes_path %>
			<% else %>
				<p>This page is for Administrators only!</p>
			<% end %>
		</td>
	</tr>
</table>
