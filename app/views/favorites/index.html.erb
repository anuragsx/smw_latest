<%if current_user%>
    <div id="content">
      <div class="page">
        <div class="rightcontent">
          <div class="ad1"> <img src="/assets/ad1.jpg" width="300" height="125" /> </div>
          <div class="ad2"> <img src="/assets/ad2.jpg" width="300" height="125" /> </div>
          <div class="ad3"> <img src="/assets/ad3.jpg" width="300" height="250" /> </div>
        </div>
        <div class="leftcontent">

          <div class="lsitarea">

            <h1 class="headingh1">My <strong>Favorites</strong></h1>

            <div class="pagination">
              <!--<span class="sort">Sort by:</span>
              <form action="#">
                <select>
                  <option>Select Category</option>
                </select>
              </form>
              -->
              <div class="clear"></div>
            </div>
            <%unless @favorites.blank?%>
                <%  @favorites.each do |fav| %>
                    <div class="post">
                      <div class="leftpost">
                        <% if fav.listing.photos.blank?%>
                            <img border="0" src="/assets/no-photo-small.jpg?1388342718" alt="No Photo Available">
                        <%else%>
                            <%= image_tag fav.listing.photos.first.image.url(:thumb), :class => "pos_img", :size => "114x91" %><!--<img class="pos_img" src="/assets/innersmallsliderimage2.png" width="114" height="91" />-->
                        <%end%>
                        <div class="middilepost">
                          <div class="inline">
                            <h2>
                              <% if fav.listing.listingtype == "auto" %>
                                  <%= fav.listing.year %> - <%= fav.listing.year %> <%= fav.listing.make %> <%= fav.listing.model %>
                              <% else %>
                                  <%= fav.listing.year %> - <%= fav.listing.year %> <%= fav.listing.category %>
                              <% end %>
                            </h2>
                            <div class="clear"></div>
                          </div>
                          <p>Transmission: <%=h fav.listing.transmission %></p>
                          <p>Mileage:  <%=h fav.listing.mileage %></p>
                          <p>Price:  <%=h fav.listing.price %></p>
                          <p>Owner Name:  <%=h fav.listing.owner.username %></p>
                          <p>
                            <!--<a href="#">Modify Item &raquo;</a>-->
                            <%= link_to "Delete Item",fav, :confirm => 'Are you sure?', :method=>:delete, :class=>"remove"%>
                          </p>
                        </div>
                      </div>
                      <div class="clear"></div>
                    </div>
                <%end%>
            <%end%>
            <div class="post">
              <div class="">
                <div class="middilepost">
                  <div class="inline">

                    <div class="clear"></div>
                  </div>

                  <span></span></div>
              </div>
              <div class="clear"></div>
            </div>
          </div>
          <div class="clear"></div>



        </div>
        <div class="clear"></div>
    </div>

<%else%>
    <div id="content">
      <div class="page">
        <div class="rightcontent">
          <div class="ad1"> <img src="/assets/ad1.jpg" width="300" height="125" /> </div>
          <div class="ad2"> <img src="/assets/ad2.jpg" width="300" height="125" /> </div>
          <div class="ad3"> <img src="/assets/ad3.jpg" width="300" height="250" /> </div>
          <div class="ad3"> <img src="images/ad3.jpg" width="300" height="250" /> </div>
          <div class="ad3"> <img src="images/ad3.jpg" width="300" height="250" /> </div>
        </div>
        <div class="leftcontent">
          <div class="lsitarea">
            <h1 class="headingh1">My <strong>Favorites</strong></h1>
            <div class="clear"></div>
          </div>
          <!--<div class="post">-->
          <p><%= link_to "Register", new_user_path, {:style=>'color:#649D4A'} %> or <%= link_to "Log in", login_url, {:style=>'color:#649D4A'} %> to set up a "Wishlist".</p>
          <p>A Wishlist will work for you while you're away - enabling our team to help you find a Perfect Swap.</p>
          <!--</div>-->
          <div class="clear"></div>
        </div>
      </div>
      <div class="clear"></div>
    </div>
<%end%>