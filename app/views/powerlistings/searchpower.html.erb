<div id="content">
  <div class="page">
    <div class="leftcontent">
      <div class="uppercontent"> <h1 class="headingh1">Advance Search for  <strong>Power</strong></h1>
        <p><table width="883" border="0" cellpadding="20" cellspacing="0">
        <tr>
          <td width="100%" align="left" valign="top">

            <%= form_tag(powerlistingsresults_powerlistings_path(:listing_type => 'power')) do |f| %>

                <%# f.fields_for @search.conditions do |listings| %>
                <%= label_tag "Year Between:" %><br/>
                <%= text_field_tag :year_gte, '', :size => 7 %> and <%= text_field_tag :year_lte, '', :size => 7 %><br/>
                <%= label_tag "Category:" %><br/>
                <%= select_tag(:category, options_for_select(@powercategories.map {|s| [s.category, s.category]},:selected => params[:category]),
                               :prompt => "-Select a Category")%><br/>
                <%= label_tag "Subcategory:" %><br/>
                <%= select_tag :sub_category, options_for_select(@powersubcategories.map {|s| [s.subcategory, s.subcategory]}, :selected => params[:sub_category]), :prompt => "-Select a Category First-" %><br />
                <%= label_tag "Make:" %><br/>
                <%= select_tag :make, options_for_select(@powermakes.map {|s| [s.make, s.make]},:selected => params[:make]),
                               {prompt: "Select a Make"} %><br/>
                <%= label_tag "Price Between:" %><br/>
                <%= text_field_tag :price_min, '', :size => 7 %> and <%= text_field_tag :price_max, '', :size => 7 %><br/>

                <%# listings.fields_for @search.conditions.owner do |owner| %>
                <%= label_tag "State:" %><br/>
                <%= select_tag(:state,options_for_select(Listing::STATES,:selected => params[:state]) , {:prompt => "-Select State"}) %><br/>
                <%# end %>

                <%= hidden_field_tag :listing_type, "power" %>
                <br/>
                <%= submit_tag "Search Powersports", :id => "Submit", :class => "sub" %>

                <%# end %>

            <% end %>

          </td>
        </tr>
      </table></p>
        <div class="clear"></div>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</div>















